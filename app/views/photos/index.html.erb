

    <% @photos.each do |photo| %>
		<div class="card photo-form">
 			 <div class="card-header">
				<%= image_tag photo.image.url(:medium) %><br>
        <strong><%= photo.description %></strong><br>
        <%= link_to photo.user.email, profile_path(photo.user_id) if photo.user %><br>
        <%= link_to 'Show', photo %>
				<% if photo.user == current_user %> |
        	<%= link_to 'Edit', edit_photo_path(photo) %> |
					<%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
      	</div>
      </div>
    <% end %>
		<br><br>
		<%= will_paginate @photos,list_classes: %w(pagination justify-content-center), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

<br>
<% if user_signed_in? %>
	<%= link_to 'New Photo', new_photo_path, class: "btn btn-primary" %>
<% end %>
<br><br>